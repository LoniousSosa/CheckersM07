<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood2"
    tools:context=".PuzzleChallengeSelection">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/oswald_regular"
        android:text="@string/time_chall"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/clockPuzzle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clockPuzzle"
        android:layout_width="163dp"
        android:layout_height="218dp"
        android:padding="20dp"
        android:src="@drawable/contrareloj"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toStartOf="@+id/playClock"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view4"
        style="@style/SeparatorWhite"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playClock"
        style="@style/ButtonOne"
        android:layout_width="164dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginEnd="32dp"
        android:padding="0px"
        android:text="@string/play"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clockPuzzle"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_regular"
        android:text="@string/clasic"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/classicPuzzle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clockPuzzle" />

    <ImageView
        android:id="@+id/classicPuzzle"
        android:layout_width="163dp"
        android:layout_height="195dp"
        android:padding="20dp"
        android:src="@drawable/classic_puzzle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clockPuzzle"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp" />

    <Button
        android:id="@+id/playClassic"
        style="@style/ButtonOne"
        android:layout_width="164dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:padding="0px"
        android:text="@string/play"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/classicPuzzle"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>