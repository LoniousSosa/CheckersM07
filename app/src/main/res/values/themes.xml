<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Checkers_First" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorPrimaryVariant">@color/brown_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ButtonOne" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorSecondary">@color/brown_200</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">60dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">15dp</item>
        <item name="fontFamily">@font/oswald_regular</item>
    </style>
    <style name="InputEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorSecondary">@color/brown_200</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
    </style>
</resources>